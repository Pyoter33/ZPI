<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Contained" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Contained.Gradient" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop"> @dimen/marginS</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_gradient_button</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IconButton.Primary" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/primary</item>
    </style>

    <style name="IconButton.Secondary" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/secondary</item>
    </style>

    <style name="Chip.Primary" parent="Widget.MaterialComponents.Chip.Choice"></style>

    <style name="Chip.Secondary" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chip_color</item>
        <item name="android:textColor">@drawable/selector_chip_text</item>
        <item name="rippleColor">@color/secondary_transparent</item>
    </style>

    <style name="ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/white_ripple</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/white_ripple</item>
    </style>

    <style name="CardWhite" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="CardLight" parent="CardView">
        <item name="cardBackgroundColor">@color/grey100</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="CardDark">
        <item name="cardBackgroundColor">@color/grey300</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="TextVerySmall">
        <item name="android:textColor">@color/grey700</item>
        <item name="android:textSize">@dimen/textVerySmall</item>
    </style>

    <style name="TextSmall">
        <item name="android:textColor">@color/grey700</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="TextMedium">
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="TextBig">
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">@dimen/textBig</item>
    </style>

    <style name="TextBigger">
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">@dimen/textBigger</item>
    </style>


    <style name="TextMega">
        <item name="android:textSize">@dimen/textMega</item>
    </style>

    <style name="TextLabel" parent="android:TextAppearance">
    </style>

    <style name="ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSize</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
    </style>

    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="android:textColorPrimaryInverse">@color/transparent</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/grey900</item>
    </style>

</resources>