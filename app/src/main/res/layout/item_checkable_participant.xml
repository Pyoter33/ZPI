<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_full_name"
        style="@style/TextBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/marginM"
        android:layout_marginVertical="@dimen/marginL"
        android:textColor="@color/grey900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_price"
        app:layout_constraintStart_toEndOf="@+id/checkbox_participant"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dorian Olisadebe" />

    <TextView
        android:id="@+id/text_price"
        style="@style/TextBigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginL"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10,24 PLN" />



</androidx.constraintlayout.widget.ConstraintLayout>